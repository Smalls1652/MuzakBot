@namespace MuzakBot.WebApp.Components.LyricsAnalyzer

<div class="grid grid-flow-row auto-rows-auto">
    <div>
        <h3 class="mb-0">
            <strong class="font-normal">@AnalyzedLyrics.SongName</strong>
        </h3>
        <div class="text-muted">
            by @AnalyzedLyrics.ArtistName
        </div>
    </div>
    <div class="mt-2 mb-0">
        <table class="param-table">
            <tbody>
                <tr>
                    <td>
                        <strong>Created on:</strong>
                    </td>
                    <td>
                        <code>@(AnalyzedLyrics.CreatedAt.ToString("yyyy-MM-dd HH:mm zzz"))</code>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Prompt style:</strong>
                    </td>
                    <td>
                        @PromptStyle.Name
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="notice-info mt-2 mb-0">
        <blockquote>
            <p class="text-2xl">
                <i class="bi bi-exclamation-triangle-fill text-yellow-400"><span class="hidden">⚠️</span></i> <strong>Note</strong>
            </p>
            <p>
                These results were generated by an "AI" and <strong>are not guaranteed</strong> to be accurate.
            </p>
            <p>
                The only context it has are the lyrics. The meaning of a song is up to the individual person's interpretation and/or the artist/band's meaning. This is only meant to as a guiding tool or for entertainment.
            </p>
        </blockquote>
    </div>
    <div class="pt-2">
        <div class="markdown-content">
            @((MarkupString)AnalysisMarkdown)
        </div>
    </div>
</div>