{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: MuzakBot.App (Watch)",
            "type": "dotnetwatchattach",
            "request": "launch",
            "args": {
                "DOTNET_ENVIRONMENT": "Development"
            },
            "task": "Watch: MuzakBot.App",
            "program": "MuzakBot"
        },
        {
            "name": "Debug: MuzakBot.App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build: MuzakBot.App",
            "program": "${workspaceFolder}/artifacts/bin/App/debug/MuzakBot.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/App",
            "stopAtEntry": false,
            "justMyCode": true,
            "console": "internalConsole",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug: MuzakBot.GeniusService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build: MuzakBot.GeniusService",
            "program": "${workspaceFolder}/artifacts/bin/GeniusService/debug/MuzakBot.GeniusService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/GeniusService",
            "stopAtEntry": false,
            "justMyCode": true,
            "console": "internalConsole",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}